# WorldShare MVP Environment Configuration
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=development
LOG_LEVEL=debug

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=worldshare
DATABASE_PASSWORD=worldshare
DATABASE_NAME=worldshare_scheduler
DATABASE_SSL_MODE=disable

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Service Ports
SCHEDULER_PORT=8080
VERIFIER_PORT=8081
METRICS_PORT=9090

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# API Configuration
API_KEY=your-api-key-here
API_BASE_URL=https://api.worldshare.dev/v1

# Storage Configuration
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_ASSETS=scene-assets
S3_BUCKET_RESULTS=optimized-results

# Verification Configuration
SSIM_THRESHOLD=0.98
PSNR_THRESHOLD=35.0
LPIPS_THRESHOLD=0.05
CONSENSUS_THRESHOLD=0.66
REDUNDANCY_FACTOR=2
CANARY_RATE=0.1

# Queue Configuration
MAX_QUEUE_SIZE=10000
PROCESSING_THREADS=10

# Node Configuration
MAX_WORKLOAD=5
HEARTBEAT_INTERVAL=30

# Kubernetes Namespace (for deployment)
K8S_NAMESPACE=worldshare-economy-offline

# Docker Registry
DOCKER_REGISTRY=ghcr.io
IMAGE_PREFIX=worldshare
VERSION=0.1.0-m0